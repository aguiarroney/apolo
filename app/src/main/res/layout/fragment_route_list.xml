<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_routes_info"
        android:layout_width="@dimen/zero_width"
        android:layout_height="wrap_content"
        android:text="@string/selecione_pontos_para_rota"
        android:textSize="@dimen/font_size_subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_clear_route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_five"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Limpar"
        app:layout_constraintTop_toBottomOf="@id/tv_routes_info" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_route_items"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero_width"
        android:layout_marginBottom="52dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_clear_route" />


</androidx.constraintlayout.widget.ConstraintLayout>